update_interval 1
total_run_times 0
net_avg_samples 0
cpu_avg_samples 1

imlib_cache_size 0
double_buffer yes
no_buffers yes

format_human_readable

use_xft yes
xftfont profont:pixelsize=11
override_utf8_locale yes
text_buffer_size 256

own_window yes
own_window_type desktop
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager

alignment top_right
gap_x 10
gap_y 30
minimum_size 182 0
maximum_width 182

default_bar_size 60 8

draw_shades no
draw_outline no
default_outline_color 111111
border_margin 0
border_width 0

default_color FFFFFF

color0 FFFFFF
#color0 111111
color1 ce084e
color2 CCCCCC
color3 1E90FF

TEXT
# CPU
${goto 32}${color1}CPU1: ${color0}${cpu cpu1}%${color}${font} ${alignr}${color2}${cpugraph cpu1 8,80 ce084e ce084e}${color}
${goto 32}${color1}CPU2: ${color0}${cpu cpu2}%${color}${font} ${alignr}${color2}${cpugraph cpu2 8,80 ce084e ce084e}${color}
# CLOCK
# ${alignc 46}${color0}${font Arial Black:size=30}${time %H:%M}${font}${color}
# ${alignc}${time %d %B %Y}
