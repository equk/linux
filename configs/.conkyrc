use_xft yes
xftfont profont:pixelsize=11
update_interval 11
own_window_colour 111111
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_transparent no
own_window_type desktop
own_window yes
text_buffer_size 256
double_buffer yes
maximum_width 1925
minimum_size 1925
draw_shades no
draw_borders yes
draw_outline yes
stippled_borders 0
border_margin 0
border_width 1
default_color FFFFFF
color1 55ff55
color2 5555ff
alignment bottom_middle
gap_x 0
gap_y 3
no_buffers yes
uppercase no
override_utf8_locale yes
use_spacer left

