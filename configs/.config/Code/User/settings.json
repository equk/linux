{

    // Disable telemetry
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,

    // Font options
    "editor.fontSize": 14,
    "editor.fontFamily": "Liberation Mono",
    "workbench.colorTheme": "Tomorrow Night Bright",
    "workbench.activityBar.visible": false,

    // ESLint
    "eslint.autoFixOnSave": true,
    "eslint.alwaysShowStatus": true,

    // Format on save
    "editor.formatOnSave": true,
    "[javascript]": {
        "editor.formatOnSave": false
    },
    "files.trimTrailingWhitespace": true,
    "editor.trimAutoWhitespace": true,

    // Rulers
    "editor.rulers": [
        80
    ],

    // Highlight gutter & current line
    "editor.renderLineHighlight": "all",

    // Hide minimap
    "editor.minimap.enabled": false,

    // Use alacritty as external terminal
    "terminal.external.linuxExec": "alacritty",

    // Use github fonts for markdown preview
    "markdown.preview.fontFamily": "-apple-system,BlinkMacSystemFont,Segoe UI,Helvetica,Arial,sans-serif,Apple Color Emoji,Segoe UI Emoji,Segoe UI Symbol",
    "markdown.preview.fontSize": 16,

    // Use breadcrumbs for symbolpath
    "breadcrumbs.enabled": true,
    "breadcrumbs.symbolPath": "on",
    "breadcrumbs.filePath": "off",

}