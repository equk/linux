{

    // Disable telemetry
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,

    // Font options
    "editor.fontSize": 14,
    "editor.fontFamily": "Liberation Mono",
    "workbench.colorTheme": "Night Owl",
    "workbench.activityBar.visible": false,

    // ESLint
    "eslint.autoFixOnSave": true,
    "eslint.alwaysShowStatus": true,

    // Format on save
    "editor.formatOnSave": true,
    "[javascript]": {
        "editor.formatOnSave": false
    },
    "[html]": {
        "editor.formatOnSave": false
    },
    "[scss]": {
        "editor.formatOnSave": false
    },
    "files.trimTrailingWhitespace": true,
    "editor.trimAutoWhitespace": true,

    // Rulers
    "editor.rulers": [
        80
    ],

    // Color overrides
    "workbench.colorCustomizations": {
        "editor.selectionBackground": "#135564",
        "editor.selectionHighlightBackground": "#991144",
        "editorLineNumber.activeForeground": "#ffffff",
        "editorCursor.foreground": "#eeeeee",
        "editorCursor.background": "#111111",
        "statusBar.background": "#135564",
        "statusBar.foreground": "#ffffff"
    },

    // Cursor - 'block', 'line' or 'underline'
    "editor.cursorStyle": "line",
    "editor.cursorWidth": 0,
    "editor.cursorBlinking": "blink",

    // Highlight gutter & current line
    "editor.renderLineHighlight": "all",

    // Hide minimap
    "editor.minimap.enabled": false,

    // Use alacritty as external terminal
    "terminal.external.linuxExec": "alacritty",

    // Use github fonts for markdown preview
    "markdown.preview.fontFamily": "-apple-system,BlinkMacSystemFont,Segoe UI,Helvetica,Arial,sans-serif,Apple Color Emoji,Segoe UI Emoji,Segoe UI Symbol",
    "markdown.preview.fontSize": 16,

    // Use breadcrumbs for symbolpath
    "breadcrumbs.enabled": true,
    "breadcrumbs.symbolPath": "on",
    "breadcrumbs.filePath": "off",

    // Golang Debugging
    "go.delveConfig": {
        "useApiV1": false,
        "dlvLoadConfig": {
            "followPointers": true,
            "maxVariableRecurse": 3,
            "maxStringLen": 64,
            "maxArrayValues": 64,
            "maxStructFields": -1
        }
    },

    // Toggle menubar with Alt
    "window.menuBarVisibility": "toggle",

    // Enable json Settings Editor
    "workbench.settings.editor": "json",

    // Use Native Linux Titlebar
    "window.titleBarStyle": "native",
    "extensions.ignoreRecommendations": false,
    "workbench.iconTheme": "material-icon-theme"
}