startup_message off

caption always "%{= Wk}%-w%{= Bw}%n %t%{-}%+w %-= %c %d/%m/%Y"

vbell off
term screen-256color
screen -t vim 0 vim
screen -t Bash1 1
screen -t Bash2 2
select 1
altscreen on

bindkey "^[[1;5D" prev  # change window with ctrl-left
bindkey "^[[1;5C" next  # change window with ctrl-right
