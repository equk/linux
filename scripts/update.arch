#!/bin/bash
# Arch Update
#
# www.equk.co.uk

# Colors
blue="\033[1;34m"
green="\033[1;32m"
red="\033[1;31m"
bold="\033[1;37m"
reset="\033[0m"

# Check for root
if [ $(whoami) != "root" ]; then
    echo -e $red"error:$reset you cannot perform this operation unless you are root."
    exit 1
fi

# Update
echo -e "$blue:: $reset Syncing ABS"
abs > /dev/null
pacman -Syy
pacman -Su
echo -e "$blue:: $reset Updating mlocate database"
updatedb
echo -e "$green:: $reset System update complete"
exit 0
